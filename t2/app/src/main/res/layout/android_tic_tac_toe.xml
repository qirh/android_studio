<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="tutorials.cs371m.androidtictactoe.AndroidTicTacToe"
    android:weightSum="1">

    <TableLayout
        android:id="@+id/play_grid"
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/one"
                android:text="1"
                android:textSize="35sp" />
            <Button
                android:id="@+id/four"
                android:text="4"
                android:textSize="35sp" />
            <Button
                android:id="@+id/seven"
                android:text="7"
                android:textSize="35sp" />
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/two"
                android:text="2"
                android:textSize="35sp" />
            <Button
                android:id="@+id/five"
                android:text="5"
                android:textSize="35sp" />
            <Button
                android:id="@+id/eight"
                android:text="8"
                android:textSize="35sp" />
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/three"
                android:text="3"
                android:textSize="35sp" />
            <Button
                android:id="@+id/six"
                android:text="6"
                android:textSize="35sp" />
            <Button
                android:id="@+id/nine"
                android:text="9"
                android:textSize="35sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/information"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:text="current game info"
        android:textSize="20sp" />

    <TableLayout
        android:id="@+id/info_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/result_human"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center_horizontal"
                android:text="Human: "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/result_tie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center_horizontal"
                android:text="Tie: "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/result_android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center_horizontal"
                android:text="Android: "
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/settings_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/new_game"
                android:text="New Game"
                android:textSize="20sp" />
            <Button
                android:id="@+id/reset"
                android:text="Reset Stats"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

</LinearLayout>